<% layout('layout') -%>

<div id="all">
        <div id="content">
            <div class="container">

                <div class="col-md-3">
                    <!-- *** CUSTOMER MENU ***
 _________________________________________________________ -->
                    <div class="panel panel-default sidebar-menu">

                        <div class="panel-heading">
                            <h3 class="panel-title">Men√∫ de Usuario</h3>
                        </div>

                        <div class="panel-body">

                            <ul class="nav nav-pills nav-stacked">
                                <li>
                                    <a href="/profile"><i class="fa fa-user"></i> Mi Cuenta</a>
                                </li>
                                <li>
                                    <a href="/wishlist"><i class="fa fa-heart"></i> Mi Lista de Deseos</a>
                                </li>
                                <li class="active">
                                    <a href="/orders"><i class="fa fa-list"></i> Mis Ordenes</a>
                                </li>
                                <% if (user.profile.admin == true) { %>
                                <li>
                                    <a href="/admin"><i class="fa fa-plus-square"></i> Agregar Productos</a>
                                </li>
                                <% } %>
                                <li>
                                    <a href="/logout"><i class="fa fa-sign-out"></i> Cerrar Sesion</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <!-- /.col-md-3 -->

                    <!-- *** CUSTOMER MENU END *** -->
                </div>

                <div class="col-md-9">
                    <div class="box">
                        <h1>Mis Pedidos</h1>

                        <p class="lead">Todos tus pedidos en un solo lugar.</p>
                        <p class="text-muted">Si tienes alguna pregunta, porfavor <a href="/contact">contactanos</a>, estamos para ayudarte.</p>
                        <hr>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Pedido</th>
                                        <th>Fecha</th>
                                        <th>Total</th>
                                        <th>Estado</th>
                                        <th>Accion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i=0; i<orders.length; i++) { %>
                                        <tr>
                                            <th># <%= orders[i]._id %></th>
                                            <td><%= moment(orders[i].date).format("YYYY-MM-DD") %></td>
                                            <td>$ <%= orders[i].total %></td>
                                            <td><span class="label label-info"><%= orders[i].status %></span>
                                            </td>
                                            <td><a href="/orders/<%= orders[i]._id %>" class="btn btn-primary btn-sm">Ver</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
		</div>
        <!-- /.container -->
    </div>
</div>