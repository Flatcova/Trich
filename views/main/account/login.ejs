<% layout('layout') -%>

<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-10 col-md-offset-1">
                <div class="box">
                        <h1>Iniciar Sesion</h1>

                        <p class="lead">¿Ya formas parte del equipo?</p>
                        <p class="text-muted">Pues inicia sesion para seguir disfrutando de los grandes beneficios que te ofrecemos!!</p>

                        <% if (errors.length > 0) { %>
                            <div class="alert alert-danger">
                            <h3><%= errors %></h3>
                            <p class="text-muted">¿Tienes alguna duda?, <a href="contact.html">Contactanos</a>, estamos a tu disposicion para ayudarte.</p>
                            </div>
                        <% } %>
                        
                        <hr>

                        <form method="post">
                            <div class="form-group">
                                <label for="email">Correo</label>
                                <input type="email" name="email" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" class="form-control" id="password">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Iniciar sesion</button>
                            </div>
                        </form>
                        <hr>
                        <p class="text-center text-muted">¿Aún no formas parte del equipo?</p>
                        <p class="text-center text-muted"><a href="/signup"><strong>Registrate Ahora</strong></a>! Es muy sencillo y no tardaras ni 1 minuto para acceder a algo inimaginable!</p>
                    </div>
            </div>

    </div>
    <!-- /.container -->
</div>
<!-- /#content -->