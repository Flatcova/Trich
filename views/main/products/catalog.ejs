<% layout('layout') -%>

<div id="all">

        <div id="content">
            <div class="container">
            	<div class="row products">
            			<%for (var i = 0; i < products.length; i++) {%>

                        <div class="col-md-3 col-sm-4 col-xs-6">
                            <div class="product">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <a href="../../product/<%= products[i]._id%>">
                                                <img src="<%= products[i].image %>" alt="" class="img-responsive">
                                            </a>
                                        </div>
                                        <div class="back">
                                            <a href="../../product/<%= products[i]._id%>">
                                                <img src="<%= products[i].image %>" alt="" class="img-responsive">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <a href="../../product/<%= products[i]._id%>" class="invisible">
                                    <img src="<%= products[i].image %>" alt="" class="img-responsive">
                                </a>
                                <div class="text">
                                    <h3><a href="../../product/<%= products[i]._id%>"><%= products[i].name %></a></h3>
                                    <p class="price">$<%= products[i].price %> MX.</p>
                                    <p class="buttons">
                                        <a href="../../product/<%= products[i]._id%>" class="btn btn-default">Ver mas Detalles</a>
                                        <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Agregar al carrito</a>
                                    </p>
                                </div>
                                <!-- /.text -->
                            </div>
                            <!-- /.product -->
                        </div>
                     <% } %>
            </div>
            <div class="pages">
                <ul class="pagination">
                    <% if ( page > 0) { %>
                    <li>
                        <a href="/catalog/page/<%= page-1 %>">
                            <i class="fa fa-chevron-left" aria-hidden="true"></i>
                        </a>
                    </li>
                    <% } %>
                    <% for (var i=0; i< pages; i++) {%>
                        <% if(page == i) { %>
                            <li class="active" >
                                <a href="/catalog/page/<%= i %>"><%= i+1 %></a>
                            </li>
                        <% }else { %>
                            <li>
                                <a href="/catalog/page/<%= i %>"><%= i+1 %></a>
                            </li>
                        <% } %>
                    <% } %>
                    <% if (page < pages-1) { %>
                    <li>
                        <a href="/catalog/page/<%= page+1 %>">
                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                        </a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
		<!-- /.col-md-9 -->

	</div>
	<!-- /.container -->
</div>
<!-- /#content -->