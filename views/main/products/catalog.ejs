            <div class="container">
            	<div class="row products">
            			<%for (var i = 0; i < products.length; i++) {%>

                        <div class="col-md-3 col-sm-4 col-xs-6">
                            <div class="product">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <a href="product/<%= products[i]._id%>">
                                                <img src="<%= products[i].image %>" alt="" class="img-responsive">
                                            </a>
                                        </div>
                                        <div class="back">
