<% layout('layout') -%>
<div id="all">

        <div id="content">
            <div class="container">
            	<div class="col-md-12">

                    <div class="row" id="productMain">
                        <div class="col-sm-6 ">
                            <div id="mainImage">
                                <img src="<%= product.image %>" alt="" class="img-responsive">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="box">
                                <h1 class="text-center"><%= product.name %></h1>
                                <p class="price">$<%= product.price %> MX.</p>

                                <div class="box" id="details">
			                        <p>
			                        <%= product.description %>
			                        </p>
			                    </div>

                                <p class="text-center buttons">
                                    <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Agregar al Carrito</a> 
                                    <a href="basket.html" class="btn btn-default"><i class="fa fa-heart"></i> Agregar a Lista de deseos</a>
                                </p>


                            </div>
	                        <div class="row" id="thumbs">
	                            <div class="col-xs-4">
	                                <a href="<%= product.image %>" class="thumb">
	                                    <img src="<%= product.image %>" alt="" class="img-responsive">
	                                </a>
	                            </div>
	                        </div>
                        </div>

                    </div>
                </div>
                <!-- /.col-md-9 -->
            </div>
            <!-- /.container -->
        </div>
