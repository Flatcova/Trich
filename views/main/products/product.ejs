<% layout('layout') -%>
<div id="all">

        <div id="content">
            <div class="container">
            	<div class="col-md-12">

                    <div class="row" id="productMain">
                        <div class="col-sm-6 ">
                            <div id="mainImage">
                                <img src="<%= product.image %>" alt="" class="img-responsive">
                            </div>
                            <hr>
                            <div class="row hidden-md hidden-lg" id="thumbs">
	                            <div class="col-xs-4">
	                                <a href="<%= product.image %>" class="thumb">
	                                    <img src="<%= product.image %>" alt="" class="img-responsive">
	                                </a>
	                            </div>
	                        </div>
                        </div>
                        <div class="col-sm-6">
                                <div class="box">
                                    <h1 class="text-center"><%= product.name %></h1>
                                    <p class="price">$<%= product.price %> MX.</p>

                                    <p class="text-center buttons">
                                        <button type="button" id="minus" class="btn btn-default"><i class="fa fa-minus"></i></button>
                                        <button type="button" id="total" class="btn btn-primary">1</button>
                                        <button type="button" id="plus" class="btn btn-default"><i class="fa fa-plus"></i></button>
                                    </p>

                                    <div class="box" id="details">
    			                        <p>
    			                        <%= product.description %>
    			                        </p>
    			                    </div>
                                    <% if(user) { %>
                                    <form method="post">
                                        <input type="hidden" name="product_id" value="<%= product._id %>">
                                        <input type="hidden" name="TotalPrice" id="TotalPrice" value="<%= product.price %>">
                                        <input type="hidden" name="UnitaryPrice" id="UnitaryPrice" value="<%= product.price %>">
                                        <input type="hidden" name="quantity" id="quantity" value="1">
                                         
                                        <p class="text-center buttons">
                                            <button class="cart_button" type="submit">
                                                <a class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Agregar al Carrito</a>
                                            </button>
                                        </p>
                                    </form>
                                    <!-- <form method="post" action="/product/<%= product._id %>/wishlist"> -->
                                        <input type="hidden" name="productid" value="<%= product._id %>">

                                        <p class="text-center buttons">
                                            <button class="cart_button" type="submit">
                                                <a class="btn btn-default"><i class="fa fa-heart"></i> Agregar a Lista de deseos</a>
                                            </button>
                                        </p>
                                    <!-- </form> -->
                                    <% }else{ %>
                                        <p class="text-center buttons">
                                            <a href="/signup" class="btn btn-primary"><i class="fa fa-user-plus"></i> Registrate para comenzar a comprar</a>
                                        </p>
                                    <% } %>
                                </div>
	                        <div class="row hidden-xs hidden-sm" id="thumbs">
	                            <div class="col-xs-4">
	                                <a href="<%= product.image %>" class="thumb">
	                                    <img src="<%= product.image %>" alt="" class="img-responsive">
	                                </a>
	                            </div>
	                        </div>
                        </div>

                    </div>
                </div>
                <!-- /.col-md-9 -->
            </div>
            <!-- /.container -->
        </div>
