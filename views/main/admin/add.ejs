<% layout('layout') -%>

<div id="all">

    <div id="content">
        <div class="container">

            <div class="col-md-10 col-md-offset-1">
                <div class="box">
                    <h1>Agregar nuevo producto</h1>

                    <% if (errors.length > 0) { %>
                        <div class="alert alert-success">
                        <h3><%= errors %></h3>
                        </div>
                    <% } %>
                        <hr>
                        <form method="post">
                            <div class="form-group">
                                <label>Nombre del Producto</label>
                                <input required type="text" class="form-control" id="name" placeholder="Ej. Resistencia 220 Ohmns"name="name">
                            </div>
                            <div class="form-group">
                                <label>Precio</label>
                                <input required type="number" step="0.01" class="form-control" id="email"
                                placeholder="Ej. 233.12" name="price">
                            </div>
                            <div class="form-group">
                                <label>Direccion de imagen</label>
                                <input required type="text" name="image" class="form-control" id="password" placeholder="/img/product/(producto)-(main o second).png">
                            </div>
                            <div class="form-group">
                                <label>Descripción</label>
                                <input required type="text" name="description" class="form-control" id="password" placeholder="Descripción breve del producto">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i> Guardar Producto</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

    </div>
    <!-- /.container -->
</div>
<!-- /#content -->